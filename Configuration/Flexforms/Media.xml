<?xml version="1.0"?>
<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sheet.media>
            <ROOT>
                <type>array</type>
                <el>
                    <settings.media>
                        <TCEforms>
                            <label>Video Titel</label>
                            <config>
                                <type>input</type>
                                <size>255</size>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.media>
                    <settings.player>
                        <TCEforms>
                            <label>Player</label>
                            <onChange>reload</onChange>
                            <config>
                                <type>radio</type>
                                <items type="array">
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Shaka with MPEG DASH</numIndex>
                                        <numIndex index="1">shaka</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.player>
                    <settings.movieDir>
                        <TCEforms>
                            <displayCond>
                                FIELD:settings.player:=:shaka
                            </displayCond>
                            <label>Video Directory Path (relative to /var/videos/)</label>
                            <config>
                                <type>input</type>
                                <size>255</size>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.movieDir>
                    <settings.metadata>
                        <title>Metadata</title>
                        <type>array</type>
                        <section>1</section>
                        <el>
                            <singleMeta>
                                <type>array</type>
                                <el>
                                    <key>
                                        <TCEforms>
                                            <label>Metadatum</label>
                                            <config>
                                                <type>input</type>
                                                <size>255</size>
                                                <eval>trim</eval>
                                            </config>
                                        </TCEforms>
                                    </key>
                                    <value>
                                        <TCEforms>
                                            <label>Wert</label>
                                            <config>
                                                <type>input</type>
                                                <size>255</size>
                                                <eval>trim</eval>
                                            </config>
                                        </TCEforms>
                                    </value>
                                    <link>
                                        <TCEforms>
                                            <label>Link</label>
                                            <config>
                                                <type>input</type>
                                                <size>255</size>
                                                <eval>trim</eval>
                                            </config>
                                        </TCEforms>
                                    </link>
                                </el>
                            </singleMeta>
                        </el>
                    </settings.metadata>
                    <settings.chapters>
                        <title>Inhalt</title>
                        <type>array</type>
                        <section>1</section>
                        <el>
                            <chapter>
                                <title>Kapitel</title>
                                <type>array</type>
                                <el>
                                    <title>
                                        <TCEforms>
                                            <label>Titel</label>
                                            <config>
                                                <type>input</type>
                                                <size>255</size>
                                                <eval>trim</eval>
                                            </config>
                                        </TCEforms>
                                    </title>
                                    <timecode>
                                        <TCEforms>
                                            <label>Timecode</label>
                                            <config>
                                                <type>input</type>
                                                <size>255</size>
                                                <eval>int</eval>
                                            </config>
                                        </TCEforms>
                                    </timecode>>
                                </el>
                            </chapter>
                        </el>
                    </settings.chapters>
                </el>
            </ROOT>
        </sheet.media>
    </sheets>
</T3DataStructure>