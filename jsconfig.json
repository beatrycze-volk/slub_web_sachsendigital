{
    "compilerOptions": {
		"resolveJsonModule": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "preserve",
        "strictFunctionTypes": true,
		"downlevelIteration": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "./Build/node_modules/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}
